{% extends 'base.html.twig' %}

{% block title %}Contact index
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-md-5"></div>
		<div class="col-md-2">
			<h1 class="text-light bg-primary p-3 text-center fw-bold rounded rounded-3 mt-5">Messagerie</h1>
		</div>
	</div>


	<div class="row mt-5">
		{% for contact in contacts %}
			<div class="col-md-4 mb-4">
				{% include 'components/cards.html.twig' %}
			</div>
		{% else %}
			<div class="row">
				<div class="col-md-5"></div>
				<div class="col-md-2">
					<p class="fw-bold text-light bg-primary rounded rounded-3 p-3 text-center fs-3 mt-5 text-uppercase">Pas de messages</p>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
